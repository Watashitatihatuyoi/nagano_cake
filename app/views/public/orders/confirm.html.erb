<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 px-sm-0">
      <h2>注文情報確認</h2>
      <table class="table">
        <thread>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thread>
        <tbody>
          <%= @order_items.each do |order_item| %>
            <tr>
              <th><%= order_item.item.get_item_image(80, 80) %><%= order_item.item.name %></th>
              <th><%= order_item.price %></th>
              <th><%= order_item.quantity %></th>
              <th><%= order_item.price * order_item.quantity %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4 px-sm-0">
      <table class="table">
        <tbody>
          <tr>
            <th>送料</th>
            <th><%= @order.postage %></th>
          </tr>
          <tr>
            <th>商品合計</th>
            <th><%= @order.total_price %></th>
          </tr>
          <tr>
            <th>請求金額</th>
            <th><%= @order.postage + @order.total_price %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <span><strong>支払方法</strong></span>
      <%= @order.payment_method_i18n %>
      <span><strong>お届け先</strong></span>
      <%= @order.order_address_display %>
      <%= @order.name %>
      <%= link_to '注文を確定する', orders_path, method: :post, class:'btn btn-success'%>
    </div>
  </div>
</div>