
<div class="container px-4">
  <div class="row justify-content-start ">
    <div class="col-sm-3 offset-1 g-3 my-4">
      <span style="background-color:#DCDCDC">　新規会員登録　</span>
    </div>
  </div>
  </div>

  <div class="row justify-content-center">
    
    <%= form_with(model:resource, scope: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>


      <div class="field">
        <%= f.label :名前 %>
        <%= f.label :"(姓)" %>
        <%= f.text_field :last_name, placeholder: "令和" %>
        <%= f.label :"(名)" %>
        <%= f.text_field :first_name, placeholder: "道子" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ %>
        <%= f.label :"(セイ)" %>
        <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, placeholder: "sample@example.com" %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :post_code, placeholder: "0000000" %>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>

      <div class="field">
        <%= f.label :"電話番号(ハイフンなし)" %>
        <%= f.text_field :phone_number, placeholder: "0000000000" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :encrypted_password %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %>
        <%= f.password_field :password_confirmation %>
      </div>
      
        <%= link_to '新規登録',customers_path, class: "btn btn-success" %>
    
    <% end %>

<div class="container px-4">
  <div class="row justify-content-start ">
    <div class="col-sm-3 offset-1 g-3 my-4">
      <span style="background-color:#DCDCDC">　既に登録済みの方　</span>
    </div>
  </div>
　</div>
　
  <p><%= render "public/shared/links" %>からログインしてください。</p>
  
</div>


  