<br>
<br>
  <div class="container">
    <div class="row">
      <div class="col">
        <span style="background-color:#DCDCDC">　新規会員登録　</span>
      </div>
    </div>
    <br>
    <br>

      <%= form_with model:resource, scope: resource_name, url: customer_registration_path, method: :post do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-md-4">
            <p>名前</p>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.label :last_name, "(姓)" %>
              <%= f.text_field :last_name, placeholder: "令和" %>

              <%= f.label :first_name, "(名)" %>
              <%=f.text_field :first_name, placeholder: "道子" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <p>フリガナ</p>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.label :last_name_kana, "(セイ)" %>
              <%= f.text_field :last_name_kana, placeholder: "レイワ" %>

              <%= f.label :first_name_kana, "(メイ)" %>
              <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
             </div>
           </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.email_field :email, placeholder: "sample@example.com" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :post_code, "郵便番号" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :post_code, placeholder: "0000000" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :address, size: "50", placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :phone_number, "電話番号" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :phone_number, placeholder: "0000000000" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :last_name, "パスワード(確認用)" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
            <div class="col-md-8 mb-3 mt-3">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
        </div>
        
      <% end %>

      <div class="row">
        <div class="col-md-12 mb-5 text-left">
          <span style="background-color:#DCDCDC">　既に登録済みの方　</span>
          <br>

          <p><%= render "public/shared/links" %>からログインしてください。</p>

        </div>
      </div>
    </div>



