<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>ショッピングカート</h2>
      <% link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, data: { confirm: "全て削除してよろしいですか？" }, class: "btn btn-danger" %>
      <div class="mx-auto">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= cart_item.item.name %></td>
                <td><%= items.price %></td>
                <td>
                  <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                  　<%= f.select :quantity, options_for_select((1..10).to_a, cart_item.quantity) %>
                  　<%= f.submit "Update Quantity" %>
                  <% end %>
                </td>
                <td><%= cart_item.items.sam(:qrice) %></td>
                <td><%= link_to "削除する", cart_item_path(@item), method: :delete, data: { canfirm: "消してよろしいですか？" }, class: "btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>