<br>
<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">

      <div class="row">
        <div class="col-md-2">
          <h4 style="background-color:#C2EEFF">会員情報編集　</h4>
        </div>
      </div>
      <br>
      <br>

        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :name, "名前" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :last_name %>
                <%=f.text_field :first_name %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :name,"フリガナ" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :post_code, "郵便番号" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :post_code %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :address, "住所" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :address, size: "50" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :phone_number, "電話番号" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.text_field :phone_number %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="col-md-8 mb-3">
              <div class="field">
                <%= f.email_field :email %>
              </div>
            </div>
          </div>
          <br>

          <div class="row">
            <div class="col-md-4"></div>
              <div class="col-md-4">
                <%= f.submit "編集内容を保存", class: "btn btn-success" %>
              </div>
        <% end %>
              <div class="col-md-4">
                <%= link_to "退会する", customers_confirm_withdraw_path, class: "btn btn-danger" %>
              </div>
            </div>

    </div>
  </div>
</div>
<br>
