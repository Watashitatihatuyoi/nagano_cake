<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2">
      
      <!-- ジャンル検索　部分テンプレート化 -->
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
      
      <div class="col-md-10">
        <div class="item_index">
          <h2>商品一覧（全<%= @total_items %>件）</h2>
        </div>
        <div class="row">
          <% @items.each do |item| %>
          <div class="one-item">
            <%= link_to item_path(item) do %>
            <p><%= image_tag item.item_image, format: "jpeg", size: "300x200" %></p>
            <% end %>
            <p><%= item.name %></p>
            <p>¥<%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>