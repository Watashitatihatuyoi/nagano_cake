<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <br>
      <%= render "genre", genre: @genres %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>商品一覧（全<%= @total_items %>件）</h2>
        <div class="row">

          <% @items.each do |item| %>
            <div class="col-mx-4 my-4">
              <div class="card" style="width:22rem">
                <%= link_to item_path(item) do %>
                  <p class="img"><%= image_tag item.item_image, format: "jpg", size: "350x250" %></p>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title"><%= item.name %></h5>
                  <p class="card-text">¥<%= item.with_tax_price.to_s(:delimited) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <%= paginate @items %>
  </row>
</div>