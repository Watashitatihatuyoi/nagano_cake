<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "genre", genre: @genres %>
    </div>
      
      <div class="Floater">
        <div class="innerWrap">
          <h2 class="font-weight-normal mt-3">商品一覧(全<%= @total_items %>件)</h2>
          <nav class="SelectBtn ThradBtn">
            <ul>
              <% @items.each do |item| %>
              <li>
                <div class="FigureArea">
                  <figure class="attachment-page-thumbnails">
                    <%= link_to item_path(item) do %>
                    <p class="img"><%= image_tag item.item_image, format: "jpg",size: "400x250" %></p>
                    <% end %>
                  </figure>
                </div>
                <div class="citeArea">
                  <cite class="min">
                    <span><%= item.name %></span>
                    <span>¥<%= item.with_tax_price.to_s(:delimited) %></span>
                  </cite>
                </div>
              </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
  </div>
</div>