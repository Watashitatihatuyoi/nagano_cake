<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <br>
      <%= render "genre", genre: @genres %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>商品一覧（全<%= @total_items %>件）</h2>
        <div class="row">

          <% @items.each do |item| %>
            <div class="col-md-6">
              <div class="card-deck">
                <div class="card" style="width:22rem">
                  <%= link_to item_path(item) do %>
                    <p class="img"><%= image_tag item.item_image, format: "jpg", size: "359x250" %></p>
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title"><%= item.name %></h5>
                    <p class="card-text">¥<%= item.with_tax_price.to_s(:delimited) %></p>
                    <% if item.is_active == true %>
                      <p class="text-success">販売中</p>
                    <% else %>
                      <p class="text-danger">販売停止中です</p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <%= paginate @items, class: "pagination" %>
  </div>
</div>