<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= render "genre", genre: @genres %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <div class="d-flex">
        <div class="mr-5">
          <%= image_tag @item.item_image, size: "400x300" %>
        </div>
        
        <div class="col-md-8">
          <h4><%= @item.name %></h4>
          <p><%= @item.explanation %></p>
          <p>¥<%= @item.with_tax_price.to_s(:delmited) %>（税込）</p>
          
          <% if @item.is_active == true %>
            <p class="text-success">販売中</p>
            <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
            <%= f.select :qantity, 1..10, prompt: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn", style:"background-color: #64CCC5; color: white; mx-3" %>
            <%= f.hidden_field :customer_id, :value => current_customer.id %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <% end %>
          <% else %>
            <h3>販売停止中です</h3>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>