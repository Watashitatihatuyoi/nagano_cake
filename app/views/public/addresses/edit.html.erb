<div class="container">
  <div class="row">
    <div class="col-12 mx-auto">

      <div class="row">
        <div class="col-md-2">
          <h4 style="background-color:#C2EEFF">　配送先編集　 </h4>
        </div>
      </div>
      <br>

        <%= form_with model: @address, url: address_path, method: :patch do |f| %>
        <div class="row">
          <div class="col-md-4">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :post_code %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :address, size: "50" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <%= f.label :name, "宛名" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :name %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
            <div class="col-md-8 mb-3 mt-3">
              <%= f.submit "変更内容を保存", class: "btn btn-success" %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
