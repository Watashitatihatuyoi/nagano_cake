<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h3>配送先登録/一覧</h3>
        <%= form_with model: @addresses, url: addresses_path do |f| %>
        <div class="row">
          <div class="col-md-4">
            <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :post_code,placeholder: "0000000" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.label :address, "住所" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-4">
            <%= f.label :name, "宛名" %>
          </div>
          <div class="col-md-8 mb-3">
            <div class="field">
              <%= f.text_field :name, placeholder: "令和道子" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
            <div class="col-md-8 mb-3 mt-3">
              <%= f.submit "新規登録", class: "btn btn-success" %>
            </div>
        </div>
      <% end %>

        <div class="row">
          <div class="col-md-10">
            <table class="table", border="1">
              <thead class="thead-light">
                <tr>
                  <th>郵便番号</th>
                  <th>住所</th>
                  <th>宛名</th>
                  <th colspan="2"></th>
                </tr>
              </thead>
              <tbody>
                <% @addresses.each do |address| %>
                <tr>
                  <td><%= address.post_code %></td>
                  <td><%= address.address %></td>
                  <td><%= address.name %></td>
                  <td><%= link_to "編集する", edit_address_path, class: "btn btn-success" %>
                      <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
    </div>
  </div>
</div>
</div>
</div>