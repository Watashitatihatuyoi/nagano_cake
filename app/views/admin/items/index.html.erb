<div class="container">
  <div class="row">
    <div class="col">
      <h3>商品一覧</h3>
      
      <div class="item-plus">
        <%= link_to "+", new_admin_item_path, class: "btn", style: "background-color: #64CCC5; color:white;" %>
      </div>
      
      <div class="admin-item-index">
        <table class="table">
          
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to admin_item_path(item.id), class: "link" do %>
                    <%= item.name %>
                    <% end %>
                </td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td><% if item.is_active == true %>
                    <span>"販売中"</span>
                    <% else %>
                    <span>"停止中"</span>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
          
        </table>
      </div>
      
    </div>
  </div>
</div>