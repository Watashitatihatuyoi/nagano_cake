<table>
  <h4>商品編集</h4>
  <%= form_with model:[:admin, @item] do |f| %>
        <tr>
          <td>商品画像</td>
          <td><%= f.file_field :item_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :explanation %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.select :genre_id, @genres,inckude_blank: "--選択してください" %></td>
        </tr>
        <tr>
          <td>税抜き価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中" %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active,"販売中止" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit '変更を保存', class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %></td>
              <% end %>
          </td>
        </tr>
</table>

