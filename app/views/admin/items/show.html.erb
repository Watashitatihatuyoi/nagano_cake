<h1>商品詳細</h1>
<%= image_tag @item.item_image, size: "200x200" %>

<table class="table table-borderless">
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.explanation %></td>
  </tr>
  <tr>
    <td>ジャンル</td>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <td>税込価格　（税抜き価格）</td>
    <td><%= @item.with_tax_price.to_s(:delimited) %>
        (<%= @item.price.to_s(:delimited) %>)
    </td>
  </tr>
  <tr>
    <td>販売ステータス</td>
    <td><%= @item.item_status %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %></td>
  </tr>
</table>
