<div class="container">
  <div class="row">
    <div class="col-md-10">
<br>
<br>
<h3>会員一覧</h3>
<br>
 <table class="table">
      <thead class="thead-light">
        <tr>
          <th style="height: 50px">会員ID</th>
          <th style="height: 50px">氏名</th>
          <th style="height: 50px">メールアドレス</th>
          <th style="height: 50px">ステータス</th>
        </tr>
      </thead>

    <% @customers.each do |customer| %>

    <tbody>
      <tr>
        <td style="height: 60px"><%= customer.id %></td>
        <td style="height: 60px"><%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name + customer.first_name %>
          <% end %>
          </td>
        <td style="height: 60px"><%= customer.email %></td>
        <td style="height: 60px"><% if customer.is_admission == true %>
              <strong class="text-success">有効</strong>
            <% elsif customer.is_admission == false %>
              <strong class="text-secondary">退会</strong>
            <% end %>
        </td>
      </tr>
    </tbody>
    <% end %>
    </table>
<br>
<br>

<%= paginate @customers %>


</div>
</div>
</div>
